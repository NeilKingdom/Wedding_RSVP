<!DOCTYPE html>
<html lang="en">
   <head>
      <title>@ViewData["Title"]</title>
		<!-- Required meta tags -->
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <!-- Bootstrap 5.1.3, recieved from jsDelivr CDN -->
		<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      <!-- FontAwesome -->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
      <!-- Personal StyleSheets -->
      <link rel="stylesheet" href="~/css/StyleSheet.css" />
      <!-- jQuery 1.8.3, recieved from google APIs CDN -->
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>
   </head>
   <body class="d-flex flex-column min-vh-100">
      <header>
         <div class="hleft">
            <a class="hlink" asp-controller="Home" asp-action="Index">
               <img class="logo" src="~/img/logo/Logo.png" alt="Neil & Madison" />
            </a>
         </div>
         <div class="hright">
            <!-- Better to use anchor tags here rather than Action Links due to styling issues with the latter -->
            <a class="hlink" asp-controller="Gift" asp-action="GiftRegistry">Gift Registry</a>
            <a class="hlink" asp-controller="User" asp-action="RsvpForm">RSVP</a>
         </div>
      </header>
      <main>
         @RenderBody()
      </main>
      <footer class="myfooter mt-auto">
         <h1 style="color: linen;">Contact Information</h1>
         <table style="text-align: left;">
            <tr>
               <td>
                  <i class="fa-regular fa-envelope"></i>
                  Email:
               </td>
               <td>
                  <a class="email" href="mailto:neilandmadison@gmail.com">neilandmadison@gmail.com</a>
               </td>
            </tr>
            <tr>
               <td>
                  <i class="fa-solid fa-phone"></i>
                  Phone:
               </td>
               <td>
                  (613) 206-3707
               </td>
            </tr>
            <tr>
               <td>
                  Social Media:
               </td>
               <td>
                  <a href="https://www.facebook.com/madison.mainville.5"><i class="fontawesome fa-lg fa-brands fa-facebook-square"></i></a>
                  <!-- TODO: Link this to an actual pages -->
                  <a href=""><i class="fontawesome fa-lg fa-brands fa-instagram"></i></a>
               </td>
            </tr>
         </table>
         <div class="footer-bar">
            <h5>&commat;Neil Kingdom - 2022</h5>
         </div>
      </footer>
      @await RenderSectionAsync("Scripts", required: false)
   </body>
</html>
