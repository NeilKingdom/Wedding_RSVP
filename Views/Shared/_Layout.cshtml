<!DOCTYPE html>
<html lang="en">
   <head>
      <title>@ViewData["Title"]</title>
		<!-- Required meta tags -->
      <meta charset="utf-8" />
      <meta name="viewport" content="width=device-width, initial-scale=1">
      <!-- Favicon -->
      <link rel="icon" type="image/x-icon" href="~/img/favicons/wedding_rings.ico">
      <!-- Bootstrap 5.1.3, recieved from jsDelivr CDN -->
		<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
      <!-- FontAwesome -->
      <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0-beta2/css/all.min.css" integrity="sha512-YWzhKL2whUzgiheMoBFwW8CKV4qpHQAEuvilg9FAn5VJUDwKZZxkJNuGM4XkWuk94WCrrwslk8yWNGmY1EduTA==" crossorigin="anonymous" referrerpolicy="no-referrer" />
      <!-- Personal StyleSheets -->
      <link rel="stylesheet" href="~/css/StyleSheet.css" />
      <!-- jQuery 1.8.3, recieved from google APIs CDN -->
      <script src="https://ajax.googleapis.com/ajax/libs/jquery/1.8.3/jquery.min.js"></script>

      <!-- For setting active link -->
      <script>
         $(document).ready(function() {
            var registeredEmail = sessionStorage.getItem("RegisteredEmail");
            if (registeredEmail !== null) {
               $("#rsvp-link").prop("href", "/User/Success");     
            }

            $("a").each(function() {
               if ($(this).prop("href") === window.location.href) {
                  $(this).addClass("active");
               }
            });
         })
      </script>
   </head>
   <body class="d-flex flex-column min-vh-100">
      <header>
         <img class="logo" src="~/img/logo/Logo2.png" alt="Neil & Madison" />
         <div class="hlinks">
            <!--
               Better to use anchor tags here rather than Action Links due to
               styling issues with the latter. Also using href attributes instead
               of ASP.NET helper tags since I match the attribute using jQuery.
            -->
            <a id="home-link" class="hlink" href="/Home/Index">Home</a>
            <a id="details-link" class="hlink" href="/Details/Index">Details</a>
            <a id="registry-link" class="hlink" href="https://www.myregistry.com/wedding-registry/madison-mainville-and-neil-kingdom-manotick-on/3538001">Gift Registry</a>
            <a id="rsvp-link" class="hlink" href="/User/RsvpForm">RSVP</a>
         </div>
      </header>
      <main>
         @RenderBody()
      </main>
      <footer class="myfooter mt-auto">
         <h1 style="color: linen;">Contact Information</h1>
         <table style="text-align: left;">
            <tr>
               <td>
                  <i class="fa-regular fa-envelope"></i>
                  Email:
               </td>
               <td>
                  <a class="email" href="mailto:neilandmadison@gmail.com">neilandmadison@gmail.com</a>
               </td>
            </tr>
            <tr>
               <td>
                  <i class="fa-solid fa-phone"></i>
                  Phone:
               </td>
               <td>
                  (613) 206-3707
               </td>
            </tr>
            <tr>
               <td>
                  Social Media:
               </td>
               <td>
                  <a href="https://www.facebook.com/madison.mainville.5"><i class="fontawesome fa-lg fa-brands fa-facebook-square"></i></a>
                  <a href="https://www.instagram.com/madymain"><i class="fontawesome fa-lg fa-brands fa-instagram"></i></a>
               </td>
            </tr>
         </table>
         <div class="footer-bar">&commat;Neil Kingdom - 2022</div>
      </footer>
      @await RenderSectionAsync("Scripts", required: false)
   </body>
</html>
